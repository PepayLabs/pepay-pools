{
  "name": "dnmm-shadow-bot",
  "version": "2.0.0",
  "description": "Enterprise-grade shadow bot for HYPE/USDC DNMM protocol simulation",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node --loader ts-node/esm shadow-bot.ts",
    "analyze": "node --loader ts-node/esm analysis.ts",
    "build": "tsc",
    "dev": "nodemon --watch '*.ts' --exec 'node --loader ts-node/esm' shadow-bot.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "clean": "rm -f *.csv shadow_*.csv metrics/hype-metrics/*.csv",
    "monitor": "node --loader ts-node/esm monitor.ts"
  },
  "dependencies": {
    "csv-parse": "^5.5.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
