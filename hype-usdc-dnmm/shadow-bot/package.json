{
  "name": "dnmm-shadow-bot",
  "version": "2.0.0",
  "description": "Enterprise-grade shadow bot for HYPE/USDC DNMM protocol simulation",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/shadow-bot.js",
    "start:dev": "node --loader ts-node/esm src/shadow-bot.ts",
    "multi": "node dist/multi-run.js",
    "analyze": "node --loader ts-node/esm src/analysis.ts",
    "monitor": "node --loader ts-node/esm src/monitor.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "clean": "rimraf dist && rimraf metrics/hype-metrics && rimraf reports"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "csv-parse": "^5.5.0",
    "debug": "^4.3.5",
    "esbuild": "^0.21.3",
    "ethers": "^6.15.0",
    "execa": "^5.1.1",
    "isexe": "^1.1.2",
    "merge-stream": "^1.0.1",
    "node-fetch": "^3.3.2",
    "path-key": "^2.0.1",
    "picocolors": "^1.0.0",
    "pretty-format": "^27.5.1",
    "prom-client": "^15.1.1",
    "shebang-command": "^1.2.0",
    "signal-exit": "^3.0.7",
    "tinypool": "^0.2.4",
    "which": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "vitest": "1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
